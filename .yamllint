extends: default
ignore: |
  .tox

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  comments:
    # prettier compatibility
    min-spaces-from-content: 1
  document-start: disable
  line-length: disable
  truthy:
    allowed-values: ['true', 'false', 'on']
